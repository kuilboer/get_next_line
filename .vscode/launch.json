{
	"version": "0.2.0",
	"configurations": [
	{
		"name": "Debug my binary",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceFolder}/srcs/gnl_debug",
		"args": [],
		"stopAtEntry": true,
		"cwd": "${workspaceFolder}/srcs",
		"environment": [],
		"externalConsole": false,
		"MIMode": "gdb",
		"miDebuggerPath": "/usr/bin/gdb",
		"setupCommands": [
		{
			"description": "Enable pretty-printing",
			"text": "-enable-pretty-printing",
			"ignoreFailures": true
		}
		],
		"preLaunchTask": "smart-make"
	}
	]
}